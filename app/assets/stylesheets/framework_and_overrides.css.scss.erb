// import the CSS framework
@import "bootstrap-sprockets";
@import "bootstrap";

body
{
  background:#fff;
  font-family: 'Lato', sans-serif;
}

a:hover, a:active, a:focus, :focus
{
  outline: 0;
}

section
{
  background:#fff;
}

.person-card
{
  @extend .col-md-2;
  @extend .col-sm-4;
  @extend .col-xs-6;
  margin:0px 10px 25px !important;
}

img {
  @extend .img-responsive;
  margin: 0 auto;
  }

.navbar-brand {
  color:#FFF !important;
  font-size:26pt;
  font-weight:300;
  font-family: 'Annie Use Your Telescope', cursive;
  -webkit-transition: color  0.2s ease-in-out;
  -moz-transition: color  0.2s ease-in-out;
  -o-transition: color  0.2s ease-in-out;
  transition: color  0.2s ease-in-out;
}

.navbar-brand:hover {
  color:#B9EAE7 !important
}

.navbar-brand strong
{
  font-weight:800;
}

.navbar{
  margin-bottom: 0;
  background:#5BABA0;
  border:none;
  border-radius:0;
  border-top:2px solid #9AD1CE;
  border-bottom:5px solid #9AD1CE;
}

.column {
  @extend .col-md-6;
  @extend .text-center;
  }
.form {
  @extend .col-md-6;
  }
.form-centered {
  @extend .col-md-6;
  @extend .text-center;
  }
.submit {
  @extend .btn;
  @extend .btn-primary;
  @extend .btn-lg;
  }
// apply styles to HTML elements
// to make views framework-neutral

.container
{
  min-width:1040px;
}

main {
  @extend .container;
  width: 100%;
  padding:0;
}

// Styles for form views
// using Bootstrap
// generated by the rails_layout gem
.authform {
  padding-top: 30px;
  max-width: 320px;
  margin: 0 auto;
}
.authform form {
  @extend .well;
  @extend .well-lg;
  padding-bottom: 40px;
}
.authform .right {
  float: right !important;
}
.authform .button {
  @extend .btn;
  @extend .btn-primary;
}
.authform fieldset {
  @extend .well;
}
#error_explanation {
  @extend .alert;
  @extend .alert-danger;
}
#error_explanation h2 {
  font-size: 16px;
}
.button-xs {
  @extend .btn;
  @extend .btn-primary;
  @extend .btn-xs;
}

.navbar-default .navbar-nav > li > a
{
  color:#fff;
  font-weight:700;
  padding:5px 12px 8px;
  margin:10px 0 0 10px;
  border-radius:4px;
  -webkit-transition: background  0.2s ease-in-out;
  -moz-transition:background  0.2s ease-in-out;
  -o-transition: background  0.2s ease-in-out;
  transition: background  0.2s ease-in-out;
}

.navbar-default .navbar-nav > li > a:hover
{
  color:#fff;
  background-color:#0C685A;
}

.navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav >
.open > a:hover, .navbar-default .navbar-nav > .open > a:focus
{
  color:#212121;
  background-color:#D9F7F2;
}

.navbar .navbar-form .form-control
{
  padding:0 10px;
  margin:0;
  border:1px solid #1B8776;
  border-radius:4px;
  font-size:10pt;
  background:#D9F7F2;
  width:150px;
  -webkit-transition: width  0.2s ease-in-out;
  -moz-transition:width  0.2s ease-in-out;
  -o-transition: width  0.2s ease-in-out;
  transition: width  0.2s ease-in-out;
}

.navbar .navbar-form .form-control:focus{
  width: 260px;
}

.navbar .navbar-form .btn-default
{
  padding:3px 7px 6px 8px;
  margin:0 -10px 0 -7px;
  border:none;
  border-right:1px solid #1B8776;
  border-top:1px solid #1B8776;
  border-bottom:1px solid #1B8776;
  border-radius:0;
  border-top-right-radius:4px;
  border-bottom-right-radius:4px;
  font-size:12pt;
  background:#D9F7F2;
}

.navbar .navbar-form .btn-default:hover
{
  color:#212121;
}

.dropdown-menu
{
  position:absolute;
  background:#f0f0f0;
  top:55px;
  padding:0;
}

.navbar-login
{
    width: 250px;
    padding: 10px 5px;
    padding-bottom: 0px;
}

.navbar-login .navbar-login-photo
{
  float:left;
  width:100px;
}

.navbar-login .navbar-login-photo img
{
  max-width: 90px !important;
  width:90px;
  padding:2px;
  background:#fff;
  border:1px solid #c0c0c0;
}

.navbar-login .navbar-login-menu
{
  display:table;
  padding-left:5px;
  width:130px;
  height:90px;
}

.navbar-login .navbar-login-menu p
{
  padding:0;
  margin:0 0 4px;
  font-weight:400;
  font-size:11pt;
  color:#5BABA0;
}

.navbar-login .navbar-login-menu p a
{
  color:#5BABA0;
}

.navbar-login-session
{
  font-size:10pt;
    padding: 10px 12px;
    padding-bottom: 0px;
    padding-top: 0px;
    font-weight:300;
}

.pagination
{
  margin:0;
}

.pagination > li > a, .pagination > li > span
{
  font-size:24pt;
  font-weight:300;
  padding:5px 22px 10px !important;
  border: none;
  color:#999;
}


.pagination > li > a:hover, .pagination > li > span:hover
{
  background:#9AD1CE;
  color:#fff;
}

.pagination > .active > a, .pagination > .active > a:hover, .pagination > .active > a:focus,
.pagination > .active > span, .pagination > .active > span:hover,
.pagination > .active > span:focus
{
  background:#5BABA0;
  border-color:#9AD1CE;
}

.modal-header
{
  background:#2B8477
}

.modal-header button.close
{
  margin-top: 2px;
}

.modal-header .modal-title
{
  color:#fff;
}

.modal-content
{
  border:none;
  border-radius:0;
}

.modal-header .modal-title
{
  font-weight:300;
}

.modal-body
{
  background:#f0f0f0
}

.modal-body small
{
  display:block;
  text-align:center;
  font-size:9pt;
  color:#888;
}

.alert
{
  border-radius:0;
  text-align:center;
  position:relative;
  width:100%;
  margin-bottom: 0;
  font-size:14pt;
}

.dropdown-menu p a,
.dropdown-menu p
{
  color:#212121;
}
